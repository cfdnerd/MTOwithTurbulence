FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-6;
        relTol          0.001;
        maxIter         1000;   // Primal pressure: drive residual below 1e-6
        nCellsInCoarsestLevel 10;
    }
    pa
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-6;
        relTol          0.001;
        maxIter         1500;   // Adjoint pressure: drive residual below 1e-6
        nCellsInCoarsestLevel 10;
    }
    "(pb|pc)"
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-8;
        relTol          0.01;
        maxIter         500;
        nCellsInCoarsestLevel 10;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         25;     // Trade-off: lower cost; residual ~1e-10 to 1e-12 (was 40, ~1e-15)
        maxIter         1000;   // Ensure smoothSolver can iterate until converged (fixes conv=0)
        tolerance       1e-8;
        relTol          0.01;
    }
    Ua
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         40;     // Adjoint momentum: increased for lower residuals (was 24, finalRes~2e-2)
        maxIter         500;
        tolerance       1e-5;
        relTol          0.08;   // Relaxed to help convergence flag
    }
    "(ka|omegaa)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         24;     // Adjoint turbulence: more sweeps for better residuals
        maxIter         500;    // Allow iteration until converged
        tolerance       1e-5;
        relTol          0.05;
    }
    "(Ub|Uc|k|omega|epsilon)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         8;      // Other adjoint/turbulence
        tolerance       1e-8;
        relTol          0.03;
    }
    T
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;   // Drive Primal T residual below 1e-6
        relTol          0.0005;
        maxIter         3000;
    }
    Tb
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-4;   // Relaxed for fine-mesh stability; GAMG more robust than PBiCGStab
        relTol          0.05;
        maxIter         500;    // Fail-fast if diverging; AdjointHeat_Tb clips/resets
        nCellsInCoarsestLevel 10;
    }
    Ta
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-5;
        relTol          0.05;
        maxIter         1500;
    }
     "(xp|xp1|fsensMeanT|gsensVol|gsensPowerDiss|sensTmp1|sensTmp2|sensTmp3)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          0;
        maxIter         2000;   // Filter/sensitivity Helmholtz PDEs; ensure convergence in turbulent cases
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 2;   // Improved p-U coupling; reduces velocity oscillations in low-velocity regions
 //   nCorrectors 2;
// nOuterCorrectors 10;
    pRefCell 0;
    pRefValue 0;

}

relaxationFactors
{
    fields
    {
        "(p|pa|pb|pc)"     0.2;
        alpha           0.1;
    }
    equations
    {
        U                  0.4;  // Primal U: lower for stability
        "(Ua|Ub|Uc)"       0.6;  // Adjoint momentum
        "(k|omega|ka|omegaa|epsilon)"   0.6;
        T                 0.9;
        "(Ta|Tb)"         0.2;   // Reduced for fine-mesh Tb stability (was 0.5; blow-up at 6e+100)
    }
}
constraintFunctionDict_flow
{
    numberConstraintPatches      2;
    constraintPatchesNames       (inlet outlet);
}
