FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|pa|pb|pc)"
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-8;
        relTol          0.01;
        maxIter         500;
        nCellsInCoarsestLevel 10;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         40;     // Drive Primal U residuals below 1e-8 (was 16, finalRes~2.8e-7)
        tolerance       1e-8;
        relTol          0.01;
    }
    Ua
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         16;     // Adjoint momentum: more sweeps for better residuals
        tolerance       1e-5;
        relTol          0.05;
    }
    "(ka|omegaa)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         12;     // Adjoint turbulence: improved convergence
        tolerance       1e-5;
        relTol          0.05;
    }
    "(Ub|Uc|k|omega|epsilon)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         8;      // Other adjoint/turbulence
        tolerance       1e-8;
        relTol          0.03;
    }
    T
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }
    "(Ta|Tb)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-5;
        relTol          0.05;
        maxIter         1500;
    }
     "(xp|xp1|fsensMeanT|gsensVol|gsensPowerDiss|sensTmp1|sensTmp2|sensTmp3)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          0;
        maxIter         2000;   // Filter/sensitivity Helmholtz PDEs; ensure convergence in turbulent cases
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 1;
 //   nCorrectors 2;
// nOuterCorrectors 10;
    pRefCell 0;
    pRefValue 0;

}

relaxationFactors
{
    fields
    {
        "(p|pa|pb|pc)"     0.2;
        alpha           0.1;
    }
    equations
    {
        "(U|Ua|Ub|Uc)"     0.7;
        "(k|omega|ka|omegaa|epsilon)"   0.7;
        T                 0.9;
        "(Ta|Tb)"         0.5;
    }
}
constraintFunctionDict_flow
{
    numberConstraintPatches      2;
    constraintPatchesNames       (inlet outlet);
}
