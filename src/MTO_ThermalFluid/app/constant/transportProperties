FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

transportModel  Newtonian;

// Case: U=1 m/s, Dh=8 mm, nu=1e-6 -> Re=8000 (turbulent)
nu                           nu [0 2 -1 0 0 0 0] 1.0e-6;
alphaMax               alphaMax [0 0 -1 0 0 0 0] 2.5e3;
alphaMAX               alphaMAX [0 0 -1 0 0 0 0] 5e4;
// Mesh-scaled alpha cap: alphaMax_mesh = alphaMaxMeshFactor * nu/h^2 (Brinkman stability)
// Limits Darcy term so pressure matrix condition number stays bounded; 1e4 typical
alphaMaxMeshFactor     5e3;
/*
alphamax=nu/(L^2*Da)=1e-6/(2e-3)^2/Da=1/(4*Da)
Da=10^-4, alphamax=2.5e3;
Da=10^-7, alphamax=2.5e6;
1.05^140=926
*/
