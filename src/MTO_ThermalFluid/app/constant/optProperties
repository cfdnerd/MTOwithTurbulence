FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      optProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

raa0                1e-5;
voluse              0.4;
mma_init            0.3;
mma_dec             0.7;
mma_inc             1.2;
movlim              0.3;
filterR             2.5;
PowerDiss0          1e-12;
PowerDissMax        10;
PowerDissRelax      25;
GeoDim              2;
fluid_area          yes;
solid_area          no;
test_area           yes;
Pnorm               300;
objFunction         1;
// Adjoint turbulence coupling: 2 = two passes of ka,omegaa,Ua (iterative); 1 = single pass
nAdjTurbPasses      2;
// Turbulence sensitivity damping coeff (0=off; use if Rk/Romega have -c*alpha*k/omega in solid)
turbSensDamp        0;
// -------------------------------------------------------------------------
// Robust adjoint framework controls
// Pseudo-transient inverse time scales [1/s]-like diagonal shifts for robustness
adjPseudoInvDtUa    50;
adjPseudoInvDtUb    25;
adjPseudoInvDtTb    10;
adjPseudoInvDtTurb  100;
// Turbulence-adjoint continuation beta: ramps from adjTurbBetaMin to 1
adjTurbBetaMin      0.2;
adjTurbRampStart    1;
adjTurbRampEnd      80;
// Lag turbulence-adjoint solves every N optimization iterations (frozen otherwise)
adjTurbLagEvery     2;
// Thermal-adjoint forcing continuation beta for Ub source b1*Tb*grad(T)
adjHeatBetaMin      0.2;
adjHeatRampStart    1;
adjHeatRampEnd      120;
// Diagnostics controls: 0=off, 1=light(metrics), 2=full(field health)
diagLevel           2;
// Log diagnostics every N optimization iterations
diagEvery           1;
// Diagnostics rank filter: -1 = all ranks, otherwise log only this MPI rank
diagRank            -1;
// Start diagnostics from this optimization iteration
diagOptStart        120;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //  
